<%-include('../Includes/header.ejs')%>
</head>
<%-include('../Includes/sidebar.ejs')%>
  <%-include('../Includes/navigation.ejs',{isLoggedIn : isLoggedIn})%>
    <br>
    <%if(data.length>0)%>
    <div class="container">
        
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
            
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Edit!</h1>
                            </div>
                            <form class="user" action="/edit" method="POST" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" name="f_name"
                                            value="<%=data.f_name%>">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="l_name" id="exampleLastName"
                                            value="<%=data.l_name%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" name="email" id="exampleInputEmail"
                                        value="<%=data.email%>">
                                </div>
                                
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="file" class="form-control" name="p_image">
                                    <input type="hidden" name="image" value="<%=data.p_image%>"><br>
                                    <img class="col-sm-6" src="../../<%=data.p_image%>" style="width: 100px;">
                                </div>
                                <br>
                                <div class="col-sm-6 mb-3">
                                    <select class="form-control" aria-label="Default select example" name="status">
                                        <option selected><%=data.status%></option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                      </select>
                                    </div>
                                
                                <input type="hidden" name="id" value="<%=data._id%>">
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Add">
                                <hr>
                               
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </div>

<%-include('../Includes/footer.ejs')%>
