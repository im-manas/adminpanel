<%-include('../Includes/header.ejs')%>
</head>
<%-include('../Includes/sidebar.ejs')%>
  <%-include('../Includes/navigation.ejs',{isLoggedIn : isLoggedIn})%>


  <%if(data.length>0)%>
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
            
                <div class="row">
                    <div class="col-lg-8 col-md-10 m-auto">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 pt-3 ">Add user!</h1>
                            </div>
                            <form class="user"  method="POST" action="/edit-user" id="addForm">
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="name" id="Name"
                                            value="<%=data.name%>">
                                            <span id="msg_name"></span>
                                            
                                    
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="email" id="Email"
                                    value="<%=data.email%>">
                                        <span id="msg_email"></span>
                                        
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label class="form-label">Password</label>
                                        <input type="password" class="form-control" name="password"
                                            id="Password" value="<%=data.password%>">
                                           
                                    </div>
                            
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label class="form-label">Confirm Password</label>
                                        <input type="password" class="form-control" name="confpassword"
                                            id="confPassword" placeholder="confirm Password" onkeyup="check(this)">
                                        <error id="alert"></error>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Phone</label>
                                    <input type="number" class="form-control" name="phone" id="Phone"
                                    value="<%=data.phone%>">
                                        <span id="msg_number"></span>
                                        
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Address</label> 
                                    
                                    <input type="text" class="form-control" name="address" id="Textarea1"
                                    value="<%=data.address%>">
                                            <span id="msg_add"></span>
                                  </div>

                                  <div class="mb-3">
                                    <select class="form-control" aria-label="Default select example" name="status">
                                        <option selected>Select Status</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                      </select>
                                    </div>
                                   <input type="hidden" name="id" value="<%=data._id%>">
                                <input type="submit" class="btn btn-primary btn-user btn-block" id="subbtn" value="Edit">
                                <hr>
                            </form>
                    
                    </div>
                </div>
            </div>
        </div>
    
    </div>

  <%-include('../Includes/footer.ejs')%>